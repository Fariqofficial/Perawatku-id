<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  >
        <layer-list>
            <item
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" >
                <shape android:shape="rectangle">
                    <solid android:color="#19285b"/>
                    <corners android:radius="100dp"/>
                    <padding android:top="8dp" android:bottom="8dp" android:left="15dp" android:right="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" >
                <shape android:shape="rectangle">
                    <solid android:color="#19285b"/>
                    <corners android:radius="100dp"/>
                    <padding android:top="8dp" android:bottom="8dp" android:left="15dp" android:right="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" >
                <shape android:shape="rectangle">
                    <solid android:color="#1b2b61"/>
                    <corners android:radius="100dp"/>
                    <padding android:top="8dp" android:bottom="8dp" android:left="15dp" android:right="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>