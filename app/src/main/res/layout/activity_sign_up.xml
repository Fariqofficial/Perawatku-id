<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zundi.perawatindonesia.SignInActivity">

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/img_logo"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:elevation="9dp"
            android:src="@drawable/logo"/>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_border"
                android:id="@+id/input.fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_fullname"
                style="@style/InputType1"
                android:layout_marginBottom="6dp"/>

                        <EditText
                            android:background="@drawable/shape_border"
                            android:layout_below="@id/input.fullname"
                            android:id="@+id/input.email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:drawablePadding="16dp"
                            android:drawableLeft="@drawable/ic_mail"
                            style="@style/InputType1"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:background="@drawable/shape_border"
                            android:layout_below="@id/input.email"
                            android:id="@+id/input.passwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:drawablePadding="16dp"
                            android:drawableLeft="@drawable/ic_loc"
                            style="@style/InputType1"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:background="@drawable/shape_border"
                            android:drawablePadding="16dp"
                            android:layout_below="@id/input.passwd"
                            android:id="@+id/input.passwd.conf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ulangi Password"
                            android:drawableLeft="@drawable/ic_loc"
                            style="@style/InputType1"
                            android:layout_marginBottom="10dp"/>

                    <TextView
                        android:textStyle="bold"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/input.passwd.conf"
                        android:id="@+id/btn.create"
                        android:layout_width="250dp"
                        android:layout_height="57dp"
                        android:text="BUAT AKUN"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_flat_blue"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
